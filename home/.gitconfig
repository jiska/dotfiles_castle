[include]
	path = ~/.gitconfig.local
[color]
	ui = auto
[alias]
	b = branch
	bd = branch -d
	can = commit --amend --no-edit
	ci = commit --verbose
	co = checkout
	coo = checkout --ours
	cot = checkout --theirs
	co- = checkout -
	cm = checkout master
	cb = checkout -b
	cp = cherry-pick
	d = diff --patience
	ds = diff --staged --patience
	grc = grep --count
	grl = grep --files-with-matches
	l = log --graph --pretty='format:%C(yellow)%h%Cblue%d%Creset %s %C(black bold)%an, %ar%Creset'
	m = merge
	n = now --all --stat
	st = status --short --branch
	sd = svn dcommit --rmdir --interactive
	sf = svn fetch
	sr = svn rebase
[core]
	whitespace = trailing-space,space-before-tab
	excludesfile = ~/.gitignore.global
	pager = less -r
	quotepath = false
	precomposeunicode = true
[pager]
	diff = diff-highlight | less
	log = diff-highlight | less
	show = diff-highlight | less
	status = true
[push]
	default = simple
[branch]
	autosetuprebase = always
[merge]
	ff = false
[pull]
	rebase = true

[credential]

[hub]
protocol = https
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /opt/homebrew-cask/Caskroom/sourcetree/1.9.7/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[fetch]
	prune = true
